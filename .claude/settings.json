{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "swift-format format --in-place \"$CLAUDE_FILE\" 2>/dev/null || true"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Edit",
      "Write",
      "Bash(swift build*)",
      "Bash(swift test*)",
      "Bash(swift-format *)",
      "Bash(./Scripts/*)",
      "Bash(cd MessageBridgeServer*)",
      "Bash(cd MessageBridgeClient*)",
      "Bash(xcodebuild*)"
    ]
  }
}
